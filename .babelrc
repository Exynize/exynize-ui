{
    "presets": ["es2015", "react", "stage-1"],
    "plugins": ["typecheck"],
    "env": {
        // only enable it when process.env.NODE_ENV is 'development' or undefined
        "development": {
            "plugins": [
                [
                    "react-transform",
                    {
                        "transforms": [
                            {
                                "transform": "react-transform-hmr",
                                "imports": ["react"],
                                "locals": ["module"]
                            },
                            {
                                "transform": "react-transform-catch-errors",
                                "imports": ["react", "redbox-react"]
                            }
                        ]
                    }
                ]
            ]
        }
    }
}
